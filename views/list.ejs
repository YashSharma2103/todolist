<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>To Do list</title>
  <link rel="stylesheet" href="css/styles.css">
</head>
<body>

  <div class="box" id="heading">
    <h1>It's a <%=kindOfDay%> <%=ListTitle%> List</h1>
  </div>
  <div class="box">
    <%newListItem.forEach(function(items){%>
      <form action="/delete" method="post">
        <div class="item">
          <input type="checkbox" name="checkbox" value="<%=items._id%>" onChange="this.form.submit()">
          <p><%= items.name %></p>
        </div>
        <input type="hidden" name="listName" value="<%=ListTitle%>">
    </form>
    <%})%>
      <form class="item" action="/" method="post">
        <input type="text" name="listItem" placeholder="New Item" autocomplete="off">
        <button type="submit" name="list" value=<%=ListTitle%>>+</button>
      </form>
  </div>
  
  
</body>
</html>